{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "allowJs": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "node_modules/@types",
            "src/typings/"
        ]
    },
    "exclude": [
        "out",
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        ".vscode-test",
        "webpack.*.ts"
    ]
}